<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FormLuatController" prefWidth="800.0" prefHeight="600.0">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Danh Sách" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            
            <!-- Bảng Luật -->
            <TableView fx:id="luatTable" prefHeight="300.0">
               <columns>
                  <TableColumn fx:id="idLuatColumn" text="IDLuat" />
                  <TableColumn fx:id="hocLucColumn" text="HocLuc" />
                  <TableColumn fx:id="khoiThiColumn" text="KhoiThi" />
                  <TableColumn fx:id="monYeuThichColumn" text="MonYeuThich" />
                  <TableColumn fx:id="soThichColumn" text="SoThich" />
                  <TableColumn fx:id="nganhGoiYColumn" text="NganhGoiY" />
               </columns>
            </TableView>

            <!-- Nhập liệu -->
            <GridPane hgap="10" vgap="10">
               <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
               <columnConstraints>
                  <ColumnConstraints percentWidth="50"/>
                  <ColumnConstraints percentWidth="50"/>
               </columnConstraints>

               <!-- Các TextField -->
               <Label text="IDLuat:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
               <TextField fx:id="idLuatField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

               <Label text="HocLuc:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
               <TextField fx:id="hocLucField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

               <Label text="KhoiThi:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
               <TextField fx:id="khoiThiField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

               <Label text="MonYeuThich:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
               <TextField fx:id="monYeuThichField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

               <Label text="SoThich:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
               <TextField fx:id="soThichField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

               <Label text="NganhGoiY:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
               <TextField fx:id="nganhGoiYField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
               <children>
                  <Button fx:id="addButton" text="Thêm" onAction="#handleAddButton" style="-fx-background-color: #008CBA; -fx-text-fill: white;" />
                  <Button fx:id="updateButton" text="Cập Nhật" onAction="#handleUpdateButton" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                  <Button fx:id="deleteButton" text="Xóa" onAction="#handleDeleteButton" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="10" left="10" right="10" bottom="10" />
         </padding>
      </VBox>
   </center>
</BorderPane>
